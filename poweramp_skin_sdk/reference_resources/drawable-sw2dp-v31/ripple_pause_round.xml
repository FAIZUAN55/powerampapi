<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
	android:color="?colorInverse"
	android:effectColor="#0000"
	>
	<item>
		<shape android:shape="oval">
			<solid android:color="?colorPlayButtonsBg" />
			<stroke android:color="?colorPlayButtonsStroke" android:width="1px"/>
			<padding android:left="1px" android:right="1px" android:top="1px" android:bottom="1px"/>
		</shape>
	</item>
	<!-- NOTE: % insets are supported for Android 8/sdk26+ -->
	<!-- NOTE: extra layer list is required as ?play_core can't be resolved via inset drawable ref -->
	<item>
		<inset android:inset="30%">
			<layer-list>
				<item android:drawable="?pause_core"/>
			</layer-list>
		</inset>
	</item>
</ripple>