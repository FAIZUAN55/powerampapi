<resources 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:w="http://schemas.android.com/apk/res-auto"
>
	<style name="ItemTrackMeta_scene_header_w_meta" parent="Base_ItemTrackMeta_scene_header_w_meta">
		<item name="layout_attachLeft">@null</item>
		<item name="layout_attachRight">parent</item>
		<item name="layout_attachBottom">@+id/menu</item>
		<item name="android:layout_marginRight">18dp</item>
		<item name="android:layout_marginBottom">1dp</item>
	</style>

	<style name="ItemTrackLine2_scene_header" parent="Base_ItemTrackLine2_scene_header">
		<item name="layout_attachBottom">@+id/shuffle_button</item>
	</style>

	<style name="ItemTrackTitle_scene_header_1" parent="ItemTrackTitle_scene_header">
		<item name="layout_attachBottom">@+id/shuffle_button</item>
		<item name="layout_attachRight">@+id/meta</item>
	</style>

	<style name="ItemTrackMenu" parent="BlackListMenu">
		<!-- We don't want menu to fly from left AA position to right position within row on landscape.
		     Instead let it fly shorter path to xx% -->
		<item name="layout_attachRight">30%</item>
	</style>
	<style name="ItemTrackLyrics" parent="ItemTrackLyricsBase">
		<!-- We don't want menu to fly from left AA position to right position within row on landscape.
		     Instead let it fly shorter path to xx% -->
		<item name="layout_attachRight">27%</item>
	</style>
</resources>